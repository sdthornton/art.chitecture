<section>
  <div class="container my-5 pb-5">
    <div class="row">
      <div class="col-xl-6 col-lg-7 offset-lg-1">
        <h1 class="font-weight-bold display-3">Renderings</h1>
      </div>
    </div>
    <div class="row">
      <div class="col-lg-6 mx-auto">
        <p class="mt-4 text-center">
          Exterior, Elevations, Homes, Houses, Contemporary, Transitional, Modern, Cottage, Lodge, French, 3D, Estates, Retreat, Horses, Barns, & Arena.
        </p>
        <hr class="accent-line my-4">
      </div>
    </div>

    <div class="image-board my-5">
      <% (1..42).each do |index| %>
        <div class="image-board-item">
          <%=
            image_tag "/assets/projects/renderings/small/renderings-#{index}.jpg",
              class: "image-board-img",
              data: { large_src: asset_path("/assets/projects/renderings/large/renderings-#{index}.jpg") }
          %>
        </div>
      <% end %>
    </div>
  </div>
</section>

<%= render partial: "/shared/image_gallery_footer" %>
