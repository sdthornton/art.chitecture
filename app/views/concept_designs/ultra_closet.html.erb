<section>
  <div class="container my-5 pb-5">
    <div class="row">
      <div class="col-xl-6 col-lg-7 offset-lg-1">
        <h1 class="font-weight-bold display-3">Ultra Closet</h1>
      </div>
    </div>

    <div class="image-board my-5">
      <% (1..41).each do |index| %>
        <div class="image-board-item">
          <%=
            image_tag "/assets/concepts/ultracloset/small/ultracloset-#{index}.jpg",
              class: "image-board-img",
              data: { large_src: asset_path("/assets/concepts/ultracloset/large/ultracloset-#{index}.jpg") }
          %>
        </div>
      <% end %>
    </div>
  </div>
</section>

<%= render partial: "/shared/image_gallery_footer" %>
